<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<AnchorPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <children>
        <Label fx:id="screenOutput" text="" style=" -fx-font-size: 30" prefHeight="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
        alignment="CENTER_RIGHT" >
            <padding>
                <Insets right="10.0"/>
            </padding>
        </Label>


        <GridPane alignment="CENTER" layoutY="210.0" prefHeight="225.0" prefWidth="235" gridLinesVisible="false"
                  AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">


            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" maxHeight="47.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="47.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="47.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="47.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" maxHeight="47.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <children >
                <Button fx:id="ac" text="AC" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="plus_minus" text="+/-" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="60" prefHeight="50" />
                <Button fx:id="percent" text="\%" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="60" prefHeight="50" />
                <Button fx:id="divide" text="รท" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="60" prefHeight="50" onAction="#getTheOperator"/>

                <Button fx:id="seven" text="7" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="eight" text="8" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="nine" text="9" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="multiply" text="x" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="60" prefHeight="50" onAction="#getTheOperator"/>

                <Button fx:id="four" text="4" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="five" text="5" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="six" text="6" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="substraction" text="-" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="60" prefHeight="50" onAction="#getTheOperator"/>

                <Button fx:id="one" text="1" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="two" text="2" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="three" text="3" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="60" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="addition" text="+" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="60" prefHeight="50" onAction="#getTheOperator" />

                <Button fx:id="zero" text="0" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
                        prefWidth="120" prefHeight="50" onAction="#onButtonClick"/>
                <Button fx:id="point" text="." GridPane.rowIndex="4" GridPane.columnIndex="2" prefWidth="60" prefHeight="50" />
                <Button fx:id="equal" text="=" GridPane.rowIndex="4" GridPane.columnIndex="3" prefWidth="60" prefHeight="50" onAction="#getTheOperator"/>

            </children>
        </GridPane>
    </children>
</AnchorPane>

